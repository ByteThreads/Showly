rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Properties are publicly readable (for booking pages)
    match /properties/{propertyId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.agentId;
    }

    // Agents - PUBLIC READ for booking pages, auth write
    match /agents/{agentId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == agentId;
    }

    // Showings - PUBLIC CREATE for booking, authenticated for updates
    match /showings/{showingId} {
      allow read: if true; // Anyone can read (for availability)
      allow create: if true; // Anyone can book a showing
      allow update, delete: if request.auth != null &&
        request.auth.uid == resource.data.agentId;
    }

    // Feedback
    match /feedback/{feedbackId} {
      allow create: if true; // Anyone can leave feedback
      allow read, update, delete: if request.auth != null &&
        request.auth.uid == resource.data.agentId;
    }
  }
}
